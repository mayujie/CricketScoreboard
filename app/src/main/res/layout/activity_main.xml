<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cricketbg"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--subView Team A-->
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:fontFamily="sans-serif"
                android:text="Team A" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:textSize="50sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:text="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="onerun"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 1 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="tworun"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 2 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="threerun"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 3 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fourrun"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 4 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sixrun"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 6 RUNS" />
        </LinearLayout>
        <!--subView Team B-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:fontFamily="sans-serif"
                android:text="Team B" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:textSize="50sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:text="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="onerunb"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 1 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="tworunb"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 2 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="threerunb"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 3 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fourrunb"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 4 RUNS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sixrunb"
                android:background="#FF9800"
                android:layout_margin="7dp"
                android:textSize="18sp"
                android:text="+ 6 RUNS" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="reset"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/custom_border"
        android:text="Reset" />
</RelativeLayout>
